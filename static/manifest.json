{
    "name": "Lisa",
    "short_name": "lisa",
    "description": "Become more productive",
    "version": "0.1.3",
    "homepage_url": "https://github.com/kwangure/lisa",
    "manifest_version": 3,
    "offline_enabled": true,
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "run_at": "document_end",
        "js": ["content/index.js"]
    }],
    "options_page": "options/index.html",
    "action": {
        "default_title": "Lisa",
        "default_icon": "images/browser-action.png",
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "alarms",
        "activeTab",
        "webNavigation",
        "storage"
    ],
    "icons": {
        "128": "images/browser-action.png"
    },
    "web_accessible_resources": [{
        "matches": ["<all_urls>"],
        "resources": ["**/index.js", "**/index.css"]
    }],
    "minimum_chrome_version": "91"
}