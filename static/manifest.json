{
    "name": "Lisa",
    "short_name": "lisa",
    "description": "Become more productive",
    "version": "0.1.2",
    "homepage_url": "https://github.com/kwangure/lisa",
    "manifest_version": 2,
    "offline_enabled": true,
    "background": { 
        "scripts": [
            "__BACKGROUND_JS__",
            "__RELOAD_JS__"
        ],
        "persistent": true
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "run_at": "document_end",
        "js": ["__CONTENT_JS__"]
    }],
    "options_page": "__OPTIONS_PAGE__",
    "browser_action": {
        "default_title": "Lisa",
        "default_icon": "browser-action.png"
    },
    "permissions": [
        "notifications",
        "activeTab"
    ],
    "icons": {
        "128": "browser-action.png"
    },
    "web_accessible_resources": [
        "**/bundle.js",
        "**/bundle.css"
    ],
    "minimum_chrome_version": "55",
    "content_security_policy": "script-src 'self'; object-src 'self'"
}