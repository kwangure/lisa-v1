{
    "name": "Extract COVID Data",
    "short_name": "ecd",
    "description": "Become more productive",
    "version": "0.1.2",
    "manifest_version": 2,
    "offline_enabled": true,
    "background": { 
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [{
        "matches": ["https://www.health.go.ke/wp-content/*"],
        "js": ["js/content.js"],
        "css": ["css/content.css"]
    }],
    "browser_action": {
        "default_title": "ECD",
        "default_icon": "images/browser-action.png"
    },
    "permissions": [
        "notifications",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "https://www.health.go.ke/wp-content/*"
    ],
    "icons": {
        "128": "images/browser-action.png"
    },
    "web_accessible_resources": [
        "css/*",
        "static/*"
    ],
    "minimum_chrome_version": "55",
    "content_security_policy": "script-src 'self'; object-src 'self'"
}