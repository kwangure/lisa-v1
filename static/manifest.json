{
    "name": "Lisa",
    "short_name": "lisa",
    "description": "Become more productive",
    "version": "0.1.3",
    "homepage_url": "https://github.com/kwangure/lisa",
    "manifest_version": 3,
    "offline_enabled": true,
    "background": {
        "service_worker": "__BACKGROUND_JS__"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "run_at": "document_end",
        "js": ["__CONTENT_JS__"]
    }],
    "options_page": "__OPTIONS_PAGE__",
    "action": {
        "default_title": "Lisa",
        "default_icon": "__BROWSER_ACTION__",
        "default_popup": "__POPUP_PAGE__"
    },
    "permissions": [
        "alarms",
        "activeTab",
        "webNavigation",
        "storage"
    ],
    "icons": {
        "128": "__BROWSER_ACTION__"
    },
    "web_accessible_resources": [{
        "matches": ["<all_urls>"],
        "resources": ["**/bundle.js", "**/bundle.css"]
    }],
    "minimum_chrome_version": "90"
}