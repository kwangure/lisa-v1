{
    "name": "Lisa",
    "short_name": "Lisa",
    "description": "Become more productive",
    "default_locale":"en",
    "version": "0.1.2",
    "homepage_url": "https://github.com/kwangure/lisa",
    "manifest_version": 2,
    "offline_enabled": true,
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/content.js"],
        "css": [
            "css/content.css"
        ]
    }],
    "options_page": "/static/options.html",
    "chrome_url_overrides":{
        "newtab": "/static/newtab.html"
    },
    "browser_action": {
        "default_title": "Lisa",
        "default_icon": "images/browser-action.png"
    },
    "permissions": [
        "alarms",
        "contextMenus",
        "notifications",
        "storage",
        "tabs",
        "activeTab"
    ],
    "background": { 
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    },
    "icons": {
        "128": "images/browser-action.png"
    },
    "web_accessible_resources": [
        "css/*",
        "images/*"
    ],
    "minimum_chrome_version": "55",
    "content_security_policy": "script-src 'self'; object-src 'self'"
}